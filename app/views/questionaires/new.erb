<%= form_for @questionaire do |f| %>
  <%= f.label 'Job Title:' %>
  <%= f.text_field :title %>
  <%= f.label 'Company Name:' %>
  <%= f.text_field :company_name %>
  <%= f.label 'How big is your existing tech team?' %>
  <%= f.text_field :size %>
  <%= f.label 'How many junior developer jobs are you looking to fill?' %>
  <%= f.text_field :positions %>
  <%= f.label 'What tech does the company use?' %>
  <%= f.text_field :tech %>
  <%= f.label 'What tech will a successful candidate be working with?' %>
  <%= f.text_field :actualtech %>
  <%= f.label 'What will they be doing?' %>
  <%= f.text_field :tasks %>
  <%= f.label 'What results will you want them to deliver?' %>
  <%= f.text_field :results %>
  <%= f.label 'What difference will they make to the company: why will they matter?' %>
  <%= f.text_field :difference %>
  <%= f.label 'What makes someone good at this job?' %>
  <%= f.text_field :ideal %>
  <%= f.label 'What should they expect from your recruitment process?' %>
  <%= f.text_field :recruitment %>
  <%= f.label 'What character traits are you looking for?' %>
  <%= f.text_field :character %>
  <%= f.label 'How will they be on-boarded?' %>
  <%= f.text_field :onboarding %>
  <%= f.label 'What will their training and development look like?' %>
  <%= f.text_field :training %>
  <%= f.label 'How much will you pay?' %>
  <%= f.text_field :pay %>
  <%= f.label 'Where will they work?' %>
  <%= f.text_field :location %>
  <%= f.label 'Would you accept  applications for part-time employment?' %>
  <%= f.text_field :parttime %>
  <%= f.submit 'Create a job' %>
<% end %>
